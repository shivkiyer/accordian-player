{
  "source": {
    "include": ["src"],
    "includePattern": ".+\\.jsx?$"
  },
  "plugins": ["plugins/markdown", "better-docs/component"],
  "opts": {
    "recurse": true,
    "destination": "documentation"
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "better-docs": {
      "name": "My React components"
    }
  }
}
